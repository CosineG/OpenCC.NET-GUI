<Window x:Class="OpenCC.NET.GUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="OpenCC.NET GUI" 
        MinHeight="600" 
        MinWidth="1000"
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:views="clr-namespace:OpenCC.NET.GUI.Views"
        Loaded="MainWindow_OnLoaded"
        ui:WindowHelper.UseModernWindowStyle="True">
    <Grid>
        <ui:NavigationView
            Name="NavigationView"
            PaneDisplayMode="Auto"
            IsPaneOpen="False"
            IsTabStop="False"
            IsSettingsVisible="False"
            IsBackEnabled="False"
            IsBackButtonVisible="Collapsed" 
            SelectionChanged="NavigationView_SelectionChanged">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="文本编辑转换" Tag="Text" Icon="Edit" />
                <ui:NavigationViewItem Content="文件批量转换" Tag="File" Icon="OpenFile" />
            </ui:NavigationView.MenuItems>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="300" />
                </Grid.ColumnDefinitions>
                <ui:Frame Background="#FFFFFFFF"
                          x:Name="ContentFrame"
                          Margin="12" />
                <views:OptionControl
                    Grid.Column="1"
                    Margin="0,12,12,12" />
            </Grid>
        </ui:NavigationView>


    </Grid>
</Window>